    %title Wojciech Wnętrzak Urizen
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %meta{charset: "utf-8"}
    %meta{content: "urizen, ruby, ruby on rails, javascript, gilowice, developer, programmer, ember, single page applications, freelancer", name: "keywords"}
    %meta{content: "Wojciech Wnętrzak - Ruby & JavaScript development", name: "description"}
